generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id             Int    @id @default(autoincrement()) 
  cpf            String @unique                     
  nome           String                             
  dataNascimento DateTime                           
  email          String @unique                    
  senha          String                           
  confirmarSenha String                            
  tipoId         Int                              

  tipo           Tipo   @relation(fields: [tipoId], references: [id])
}



model Tipo {
  id   Int    @id                                    
  tipo String                                       

  users User[]
}
